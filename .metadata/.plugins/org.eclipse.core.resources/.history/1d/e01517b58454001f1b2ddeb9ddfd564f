package edu.upenn.cit594.ui;

import java.util.Iterator;
import java.util.List;

public class UserInterface {

  public void displayMenu(List<Integer> availableActions){
//	  Iterator it = new Iterator();
	  Iterator<Integer> it = availableActions.iterator();
	    while(it.hasNext()) {
	      Integer i = it.next();
	      switch (i) {
	        case 0:
	        	System.out.println("Click 0. Exit the program.");
	        case 1:
	        	System.out.println("Click 1. Show the available actions");
	        	
	        case 2:
	        	System.out.println("Click 2. Show the total population for all ZIP Codes");
	        case 3:
	        	System.out.println("Click 3. Show the total vaccinations per capita for each ZIP Code for the specified date");

	        case 4:
	        	System.out.println("Click 4. Show the average market value for properties in a specified ZIP Code");

	        case 5:
	        	System.out.println("Click 5. Show the average total livable area for properties in a specified ZIP Code");
	        case 6:
	        	System.out.println("Click 6. Show the total market value of properties, per capita, for a specified ZIP Code");
	        case 7:
	        	System.out.println("Click 7. Show the results of your custom feature");
	      }
	 }
		  
	}
//   System.out.println("Click 0. Exit the program.");
//   System.out.println("Click 1. Show the available actions");
//   System.out.println("Click 2. Show the total population for all ZIP Codes");
//   System.out.println("Click 3. Show the total vaccinations per capita for each ZIP Code for the specified date");
//   System.out.println("Click 4. Show the average market value for properties in a specified ZIP Code");
//   System.out.println("Click 5. Show the average total livable area for properties in a specified ZIP Code");
//   System.out.println("Click 6. Show the total market value of properties, per capita, for a specified ZIP Code");
//   System.out.println("Click 7. Show the results of your custom feature");
  
}